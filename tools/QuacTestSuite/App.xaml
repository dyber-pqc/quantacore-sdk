<Application x:Class="QuacTestSuite.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Material Design -->
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="Teal" SecondaryColor="Cyan" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Dyber Brand Colors -->
            <Color x:Key="DyberPrimaryColor">#00D4AA</Color>
            <Color x:Key="DyberSecondaryColor">#00B4D8</Color>
            <Color x:Key="DyberDarkColor">#0D1B2A</Color>
            <Color x:Key="DyberBackgroundColor">#0A1628</Color>
            <Color x:Key="DyberSurfaceColor">#152232</Color>
            <Color x:Key="DyberSuccessColor">#2ED573</Color>
            <Color x:Key="DyberWarningColor">#FFB800</Color>
            <Color x:Key="DyberErrorColor">#FF4757</Color>
            
            <SolidColorBrush x:Key="DyberPrimaryBrush" Color="{StaticResource DyberPrimaryColor}" />
            <SolidColorBrush x:Key="DyberSecondaryBrush" Color="{StaticResource DyberSecondaryColor}" />
            <SolidColorBrush x:Key="DyberDarkBrush" Color="{StaticResource DyberDarkColor}" />
            <SolidColorBrush x:Key="DyberBackgroundBrush" Color="{StaticResource DyberBackgroundColor}" />
            <SolidColorBrush x:Key="DyberSurfaceBrush" Color="{StaticResource DyberSurfaceColor}" />
            <SolidColorBrush x:Key="DyberSuccessBrush" Color="{StaticResource DyberSuccessColor}" />
            <SolidColorBrush x:Key="DyberWarningBrush" Color="{StaticResource DyberWarningColor}" />
            <SolidColorBrush x:Key="DyberErrorBrush" Color="{StaticResource DyberErrorColor}" />

        </ResourceDictionary>
    </Application.Resources>
</Application>
