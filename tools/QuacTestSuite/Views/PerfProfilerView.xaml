<UserControl x:Class="QuacTestSuite.Views.PerfProfilerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1100">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Controls -->
        <Border Grid.Row="0" Background="#152232" CornerRadius="12" Padding="20" Margin="0,0,0,24">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Profile Duration:" Foreground="White" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <ComboBox x:Name="CmbDuration" SelectedIndex="1" Width="120" VerticalAlignment="Center">
                        <ComboBoxItem Content="10 seconds"/>
                        <ComboBoxItem Content="30 seconds"/>
                        <ComboBoxItem Content="60 seconds"/>
                        <ComboBoxItem Content="5 minutes"/>
                    </ComboBox>

                    <TextBlock Text="Sample Rate:" Foreground="White" VerticalAlignment="Center" Margin="24,0,12,0"/>
                    <ComboBox x:Name="CmbSampleRate" SelectedIndex="1" Width="100" VerticalAlignment="Center">
                        <ComboBoxItem Content="100 Hz"/>
                        <ComboBoxItem Content="1 kHz"/>
                        <ComboBoxItem Content="10 kHz"/>
                    </ComboBox>

                    <CheckBox Content="Include call stacks" IsChecked="True" Foreground="White" VerticalAlignment="Center" Margin="24,0,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="BtnStart" Click="StartProfile_Click"
                            Background="#00D4AA" Foreground="#0A1628" FontWeight="SemiBold" 
                            Padding="20,12" Height="Auto" MinHeight="44" Cursor="Hand" Margin="0,0,12,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="RecordCircle" Width="20" Height="20" VerticalAlignment="Center"/>
                            <TextBlock Text="Start Profiling" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="BtnExport" Click="Export_Click" 
                            Background="Transparent" BorderBrush="#5A6C7D" BorderThickness="1"
                            Foreground="#7F8C9A" Padding="16,12" Height="Auto" MinHeight="44" Cursor="Hand">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FileExport" Width="18" Height="18" VerticalAlignment="Center"/>
                            <TextBlock Text="Export" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Timeline / Flame Graph -->
            <Border Grid.Column="0" Background="#152232" CornerRadius="12" Padding="24" Margin="0,0,16,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,16">
                        <TextBlock Text="Performance Timeline" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <RadioButton Content="Timeline" GroupName="View" IsChecked="True" Foreground="White" Margin="0,0,16,0"/>
                            <RadioButton Content="Flame Graph" GroupName="View" Foreground="White" Margin="0,0,16,0"/>
                            <RadioButton Content="Call Tree" GroupName="View" Foreground="White"/>
                        </StackPanel>
                    </Grid>

                    <Border Grid.Row="1" Background="#0A1628" CornerRadius="8" Padding="16">
                        <Grid>
                            <!-- Timeline Visualization Placeholder -->
                            <Canvas x:Name="TimelineCanvas" ClipToBounds="True"/>
                            
                            <StackPanel x:Name="EmptyState" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="ChartTimeline" Width="64" Height="64" 
                                                         Foreground="#2A3F54" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                                <TextBlock Text="Click 'Start Profiling' to capture performance data" 
                                           FontSize="14" Foreground="#5A6C7D" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Metrics Panel -->
            <Border Grid.Column="1" Background="#152232" CornerRadius="12" Padding="24" Margin="16,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Performance Metrics" FontSize="18" FontWeight="SemiBold" 
                                   Foreground="White" Margin="0,0,0,24"/>

                        <!-- CPU Usage -->
                        <Border Background="#0A1628" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                            <StackPanel>
                                <Grid>
                                    <TextBlock Text="CPU USAGE" Foreground="#5A6C7D" FontSize="10" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="TxtCpuPeak" Text="Peak: --" Foreground="#5A6C7D" FontSize="10" HorizontalAlignment="Right"/>
                                </Grid>
                                <TextBlock x:Name="TxtCpu" Text="--" FontSize="28" FontWeight="Bold" Foreground="#00D4AA" Margin="0,8,0,0"/>
                                <ProgressBar x:Name="CpuBar" Value="0" Maximum="100" Height="6" 
                                             Background="#1A2D42" Foreground="#00D4AA" Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Device Utilization -->
                        <Border Background="#0A1628" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                            <StackPanel>
                                <TextBlock Text="DEVICE UTILIZATION" Foreground="#5A6C7D" FontSize="10" FontWeight="SemiBold"/>
                                <TextBlock x:Name="TxtDevUtil" Text="--" FontSize="28" FontWeight="Bold" Foreground="#00B4D8" Margin="0,8,0,0"/>
                                <ProgressBar x:Name="DevUtilBar" Value="0" Maximum="100" Height="6" 
                                             Background="#1A2D42" Foreground="#00B4D8" Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Memory Usage -->
                        <Border Background="#0A1628" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                            <StackPanel>
                                <TextBlock Text="MEMORY USAGE" Foreground="#5A6C7D" FontSize="10" FontWeight="SemiBold"/>
                                <TextBlock x:Name="TxtMemory" Text="--" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,8,0,0"/>
                                <TextBlock x:Name="TxtMemoryDetail" Text="-- / -- MB" Foreground="#7F8C9A" FontSize="11"/>
                            </StackPanel>
                        </Border>

                        <!-- DMA Throughput -->
                        <Border Background="#0A1628" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                            <StackPanel>
                                <TextBlock Text="DMA THROUGHPUT" Foreground="#5A6C7D" FontSize="10" FontWeight="SemiBold"/>
                                <TextBlock x:Name="TxtDma" Text="--" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,8,0,0"/>
                                <TextBlock Text="GB/s" Foreground="#5A6C7D" FontSize="11"/>
                            </StackPanel>
                        </Border>

                        <!-- Hot Functions -->
                        <TextBlock Text="HOT FUNCTIONS" Foreground="#5A6C7D" FontSize="10" FontWeight="SemiBold" Margin="0,12,0,12"/>
                        
                        <Border Background="#0A1628" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                            <Grid>
                                <TextBlock Text="quac_kem_keygen" Foreground="#00D4AA" FontFamily="Consolas" FontSize="12"/>
                                <TextBlock Text="32.4%" Foreground="White" HorizontalAlignment="Right"/>
                            </Grid>
                        </Border>
                        
                        <Border Background="#0A1628" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                            <Grid>
                                <TextBlock Text="quac_random_bytes" Foreground="#00B4D8" FontFamily="Consolas" FontSize="12"/>
                                <TextBlock Text="18.7%" Foreground="White" HorizontalAlignment="Right"/>
                            </Grid>
                        </Border>
                        
                        <Border Background="#0A1628" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                            <Grid>
                                <TextBlock Text="ntt_forward" Foreground="#FFB800" FontFamily="Consolas" FontSize="12"/>
                                <TextBlock Text="15.2%" Foreground="White" HorizontalAlignment="Right"/>
                            </Grid>
                        </Border>
                        
                        <Border Background="#0A1628" CornerRadius="6" Padding="12">
                            <Grid>
                                <TextBlock Text="sha3_absorb" Foreground="#7F8C9A" FontFamily="Consolas" FontSize="12"/>
                                <TextBlock Text="8.9%" Foreground="White" HorizontalAlignment="Right"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>
