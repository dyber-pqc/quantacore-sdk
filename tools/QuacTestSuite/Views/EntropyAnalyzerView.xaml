<UserControl x:Class="QuacTestSuite.Views.EntropyAnalyzerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1100">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Controls Bar -->
        <Border Grid.Row="0" Background="#152232" CornerRadius="12" Padding="20" Margin="0,0,0,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Sample Size:" Foreground="White" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <ComboBox x:Name="CmbSampleSize" SelectedIndex="2" Width="140" VerticalAlignment="Center">
                        <ComboBoxItem Content="1 KB"/>
                        <ComboBoxItem Content="10 KB"/>
                        <ComboBoxItem Content="100 KB"/>
                        <ComboBoxItem Content="1 MB"/>
                        <ComboBoxItem Content="10 MB"/>
                    </ComboBox>

                    <TextBlock Text="Visualization:" Foreground="White" VerticalAlignment="Center" Margin="24,0,12,0"/>
                    <ComboBox x:Name="CmbVisualization" SelectedIndex="0" Width="160" VerticalAlignment="Center">
                        <ComboBoxItem Content="Byte Distribution"/>
                        <ComboBoxItem Content="Bit Pattern"/>
                        <ComboBoxItem Content="Autocorrelation"/>
                        <ComboBoxItem Content="2D Scatter Plot"/>
                    </ComboBox>

                    <CheckBox x:Name="ChkRealtime" Content="Real-time streaming" 
                              IsChecked="False" Foreground="White" VerticalAlignment="Center" Margin="24,0,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="BtnSample" Click="Sample_Click" 
                            Background="#00D4AA" Foreground="#0A1628" FontWeight="SemiBold" 
                            Padding="20,12" Height="Auto" MinHeight="44" Cursor="Hand" Margin="0,0,12,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ChartScatterPlot" Width="20" Height="20" VerticalAlignment="Center"/>
                            <TextBlock Text="Analyze Sample" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="BtnExport" Click="Export_Click" 
                            Background="Transparent" BorderBrush="#00D4AA" BorderThickness="1"
                            Foreground="#00D4AA" Padding="16,12" Height="Auto" MinHeight="44" Cursor="Hand">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FileExport" Width="18" Height="18" VerticalAlignment="Center"/>
                            <TextBlock Text="Export Report" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Visualization Panel -->
            <Border Grid.Column="0" Background="#152232" CornerRadius="12" Padding="24" Margin="0,0,16,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Byte Distribution Histogram" FontSize="18" FontWeight="SemiBold" 
                               Foreground="White" Margin="0,0,0,20"/>

                    <!-- Histogram Visualization -->
                    <Border Grid.Row="1" Background="#0A1628" CornerRadius="8" Padding="16">
                        <Grid>
                            <Canvas x:Name="HistogramCanvas" ClipToBounds="True"/>
                            
                            <!-- Placeholder for empty state -->
                            <StackPanel x:Name="EmptyState" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="ChartHistogram" Width="64" Height="64" 
                                                         Foreground="#2A3F54" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                                <TextBlock Text="Click 'Analyze Sample' to visualize entropy" 
                                           FontSize="14" Foreground="#5A6C7D" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Stats Panel -->
            <Border Grid.Column="1" Background="#152232" CornerRadius="12" Padding="24" Margin="16,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Entropy Analysis" FontSize="18" FontWeight="SemiBold" 
                                   Foreground="White" Margin="0,0,0,24"/>

                        <!-- Shannon Entropy -->
                        <Border Background="#0A1628" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                            <StackPanel>
                                <TextBlock Text="SHANNON ENTROPY" Foreground="#5A6C7D" FontSize="10" FontWeight="SemiBold"/>
                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                    <TextBlock x:Name="TxtShannonEntropy" Text="--" FontSize="28" FontWeight="Bold" Foreground="#00D4AA"/>
                                    <TextBlock Text=" bits/byte" FontSize="14" Foreground="#5A6C7D" VerticalAlignment="Bottom" Margin="0,0,0,4"/>
                                </StackPanel>
                                <ProgressBar x:Name="EntropyBar" Value="0" Maximum="8" Height="6" 
                                             Background="#1A2D42" Foreground="#00D4AA" Margin="0,8,0,0"/>
                                <TextBlock Text="Theoretical max: 8.0 bits/byte" Foreground="#3D4F5F" FontSize="10" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Min Entropy -->
                        <Border Background="#0A1628" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                            <StackPanel>
                                <TextBlock Text="MIN-ENTROPY" Foreground="#5A6C7D" FontSize="10" FontWeight="SemiBold"/>
                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                    <TextBlock x:Name="TxtMinEntropy" Text="--" FontSize="24" FontWeight="Bold" Foreground="#00B4D8"/>
                                    <TextBlock Text=" bits/byte" FontSize="12" Foreground="#5A6C7D" VerticalAlignment="Bottom" Margin="0,0,0,4"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Chi-Square -->
                        <Border Background="#0A1628" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                            <Grid>
                                <StackPanel>
                                    <TextBlock Text="CHI-SQUARE TEST" Foreground="#5A6C7D" FontSize="10" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="TxtChiSquare" Text="--" FontSize="20" FontWeight="SemiBold" Foreground="White" Margin="0,8,0,0"/>
                                    <TextBlock x:Name="TxtChiSquareP" Text="p-value: --" Foreground="#7F8C9A" FontSize="11" Margin="0,4,0,0"/>
                                </StackPanel>
                                <Border x:Name="ChiSquareStatus" Background="#2ED573" CornerRadius="4" 
                                        Padding="8,4" HorizontalAlignment="Right" VerticalAlignment="Top">
                                    <TextBlock Text="PASS" Foreground="#0A1628" FontSize="10" FontWeight="Bold"/>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Compression Ratio -->
                        <Border Background="#0A1628" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                            <StackPanel>
                                <TextBlock Text="COMPRESSION RATIO" Foreground="#5A6C7D" FontSize="10" FontWeight="SemiBold"/>
                                <TextBlock x:Name="TxtCompression" Text="--" FontSize="20" FontWeight="SemiBold" Foreground="White" Margin="0,8,0,0"/>
                                <TextBlock Text="True random data is incompressible" Foreground="#3D4F5F" FontSize="10" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Serial Correlation -->
                        <Border Background="#0A1628" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                            <StackPanel>
                                <TextBlock Text="SERIAL CORRELATION" Foreground="#5A6C7D" FontSize="10" FontWeight="SemiBold"/>
                                <TextBlock x:Name="TxtCorrelation" Text="--" FontSize="20" FontWeight="SemiBold" Foreground="White" Margin="0,8,0,0"/>
                                <TextBlock Text="Should be close to 0" Foreground="#3D4F5F" FontSize="10" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- NIST Tests Summary -->
                        <Border Background="#1A2D42" CornerRadius="8" Padding="16" Margin="0,12,0,0">
                            <Grid>
                                <StackPanel>
                                    <TextBlock Text="NIST SP 800-90B COMPLIANCE" Foreground="#5A6C7D" FontSize="10" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="TxtNistStatus" Text="--" FontSize="18" FontWeight="Bold" Foreground="#2ED573" Margin="0,8,0,0"/>
                                </StackPanel>
                                <materialDesign:PackIcon x:Name="NistIcon" Kind="ShieldCheck" Width="32" Height="32" 
                                                         Foreground="#2ED573" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Bottom Stats Bar -->
        <Border Grid.Row="2" Background="#152232" CornerRadius="12" Padding="20" Margin="0,24,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="SAMPLE SIZE" Foreground="#5A6C7D" FontSize="10" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="TxtSampleSize" Text="--" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="THROUGHPUT" Foreground="#5A6C7D" FontSize="10" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="TxtThroughput" Text="--" FontSize="18" FontWeight="Bold" Foreground="#00D4AA" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="ANALYSIS TIME" Foreground="#5A6C7D" FontSize="10" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="TxtAnalysisTime" Text="--" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                    <TextBlock Text="UNIQUE BYTES" Foreground="#5A6C7D" FontSize="10" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="TxtUniqueBytes" Text="--" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="4" HorizontalAlignment="Center">
                    <TextBlock Text="SOURCE" Foreground="#5A6C7D" FontSize="10" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    <TextBlock Text="Hardware QRNG" FontSize="18" FontWeight="Bold" Foreground="#00D4AA" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
