<UserControl x:Class="QuacTestSuite.Views.BatchOpsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1100">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Controls -->
        <Border Grid.Row="0" Background="#152232" CornerRadius="12" Padding="20" Margin="0,0,0,24">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Operation Type:" Foreground="White" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <ComboBox x:Name="CmbOperation" SelectedIndex="0" Width="200" VerticalAlignment="Center">
                        <ComboBoxItem Content="KEM Key Generation"/>
                        <ComboBoxItem Content="KEM Encapsulation"/>
                        <ComboBoxItem Content="KEM Decapsulation"/>
                        <ComboBoxItem Content="Signature Generation"/>
                        <ComboBoxItem Content="Signature Verification"/>
                        <ComboBoxItem Content="Mixed Operations"/>
                    </ComboBox>

                    <TextBlock Text="Batch Size:" Foreground="White" VerticalAlignment="Center" Margin="24,0,12,0"/>
                    <ComboBox x:Name="CmbBatchSize" SelectedIndex="2" Width="120" VerticalAlignment="Center">
                        <ComboBoxItem Content="10"/>
                        <ComboBoxItem Content="100"/>
                        <ComboBoxItem Content="1,000"/>
                        <ComboBoxItem Content="10,000"/>
                        <ComboBoxItem Content="100,000"/>
                    </ComboBox>

                    <TextBlock Text="Threads:" Foreground="White" VerticalAlignment="Center" Margin="24,0,12,0"/>
                    <ComboBox x:Name="CmbThreads" SelectedIndex="2" Width="80" VerticalAlignment="Center">
                        <ComboBoxItem Content="1"/>
                        <ComboBoxItem Content="2"/>
                        <ComboBoxItem Content="4"/>
                        <ComboBoxItem Content="8"/>
                        <ComboBoxItem Content="16"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="BtnStart" Click="Start_Click"
                            Background="#00D4AA" Foreground="#0A1628" FontWeight="SemiBold" 
                            Padding="20,12" Height="Auto" MinHeight="44" Cursor="Hand" Margin="0,0,12,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="PlaylistPlay" Width="20" Height="20" VerticalAlignment="Center"/>
                            <TextBlock Text="Execute Batch" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="BtnStop" Click="Stop_Click" IsEnabled="False"
                            Background="Transparent" BorderBrush="#FF4757" BorderThickness="1"
                            Foreground="#FF4757" Padding="16,12" Height="Auto" MinHeight="44" Cursor="Hand">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Stop" Width="18" Height="18" VerticalAlignment="Center"/>
                            <TextBlock Text="Stop" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Progress and Queue -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Progress Panel -->
            <Border Grid.Column="0" Background="#152232" CornerRadius="12" Padding="24" Margin="0,0,16,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Batch Execution Progress" FontSize="18" FontWeight="SemiBold" 
                               Foreground="White" Margin="0,0,0,24"/>

                    <!-- Progress Bar -->
                    <Border Grid.Row="1" Background="#0A1628" CornerRadius="8" Padding="20" Margin="0,0,0,24">
                        <StackPanel>
                            <Grid Margin="0,0,0,12">
                                <TextBlock x:Name="TxtProgress" Text="Ready to execute batch" 
                                           FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                                <TextBlock x:Name="TxtPercent" Text="0%" HorizontalAlignment="Right"
                                           FontSize="16" FontWeight="Bold" Foreground="#00D4AA"/>
                            </Grid>
                            <ProgressBar x:Name="ProgressBar" Value="0" Maximum="100" Height="12" 
                                         Background="#1A2D42" Foreground="#00D4AA"/>
                            <Grid Margin="0,12,0,0">
                                <TextBlock x:Name="TxtCompleted" Text="0 / 0 operations" Foreground="#7F8C9A"/>
                                <TextBlock x:Name="TxtRemaining" Text="" HorizontalAlignment="Right" Foreground="#7F8C9A"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Stats Grid -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="#0A1628" CornerRadius="8" Padding="16" Margin="0,0,8,0">
                            <StackPanel>
                                <TextBlock Text="THROUGHPUT" Foreground="#5A6C7D" FontSize="10" FontWeight="SemiBold"/>
                                <TextBlock x:Name="TxtThroughput" Text="--" FontSize="24" FontWeight="Bold" Foreground="#00D4AA" Margin="0,8,0,0"/>
                                <TextBlock Text="ops/sec" Foreground="#5A6C7D" FontSize="11"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Background="#0A1628" CornerRadius="8" Padding="16" Margin="8,0">
                            <StackPanel>
                                <TextBlock Text="AVG LATENCY" Foreground="#5A6C7D" FontSize="10" FontWeight="SemiBold"/>
                                <TextBlock x:Name="TxtLatency" Text="--" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,8,0,0"/>
                                <TextBlock Text="Âµs" Foreground="#5A6C7D" FontSize="11"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="2" Background="#0A1628" CornerRadius="8" Padding="16" Margin="8,0">
                            <StackPanel>
                                <TextBlock Text="SUCCESS" Foreground="#5A6C7D" FontSize="10" FontWeight="SemiBold"/>
                                <TextBlock x:Name="TxtSuccess" Text="--" FontSize="24" FontWeight="Bold" Foreground="#2ED573" Margin="0,8,0,0"/>
                                <TextBlock Text="operations" Foreground="#5A6C7D" FontSize="11"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="3" Background="#0A1628" CornerRadius="8" Padding="16" Margin="8,0,0,0">
                            <StackPanel>
                                <TextBlock Text="ERRORS" Foreground="#5A6C7D" FontSize="10" FontWeight="SemiBold"/>
                                <TextBlock x:Name="TxtErrors" Text="--" FontSize="24" FontWeight="Bold" Foreground="#FF4757" Margin="0,8,0,0"/>
                                <TextBlock Text="failed" Foreground="#5A6C7D" FontSize="11"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

            <!-- Queue Panel -->
            <Border Grid.Column="1" Background="#152232" CornerRadius="12" Padding="24" Margin="16,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Operation Queue" FontSize="18" FontWeight="SemiBold" 
                               Foreground="White" Margin="0,0,0,16"/>

                    <ListBox Grid.Row="1" x:Name="QueueList" Background="Transparent" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#0A1628" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Operation}" Foreground="White" FontSize="12"/>
                                            <TextBlock Text="{Binding Status}" Foreground="#7F8C9A" FontSize="10"/>
                                        </StackPanel>
                                        <materialDesign:PackIcon Grid.Column="1" Kind="{Binding Icon}" 
                                                                 Foreground="{Binding Color}" Width="20" Height="20"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>

        <!-- Bottom Stats -->
        <Border Grid.Row="2" Background="#152232" CornerRadius="12" Padding="20" Margin="0,24,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="TOTAL TIME" Foreground="#5A6C7D" FontSize="10" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="TxtTotalTime" Text="--" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="P99 LATENCY" Foreground="#5A6C7D" FontSize="10" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="TxtP99" Text="--" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="CPU USAGE" Foreground="#5A6C7D" FontSize="10" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="TxtCpu" Text="--" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                    <TextBlock Text="DEVICE TEMP" Foreground="#5A6C7D" FontSize="10" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="TxtTemp" Text="--" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
