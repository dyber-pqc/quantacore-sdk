<UserControl x:Class="QuacTestSuite.Views.KeyManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1100">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="380"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Key Generation Panel -->
        <Border Grid.Column="0" Background="#152232" CornerRadius="12" Padding="24" Margin="0,0,24,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Generate New Key Pair" FontSize="18" FontWeight="Bold" 
                               Foreground="White" Margin="0,0,0,24"/>

                    <TextBlock Text="ALGORITHM TYPE" Foreground="#7F8C9A" FontSize="11" FontWeight="Bold" Margin="0,0,0,12"/>
                    <ComboBox x:Name="CmbAlgorithmType" SelectedIndex="0" Margin="0,0,0,20" SelectionChanged="AlgorithmType_Changed">
                        <ComboBoxItem Content="ML-KEM (Key Encapsulation)"/>
                        <ComboBoxItem Content="ML-DSA (Digital Signatures)"/>
                        <ComboBoxItem Content="SLH-DSA (Hash-Based Signatures)"/>
                    </ComboBox>

                    <TextBlock Text="ALGORITHM VARIANT" Foreground="#7F8C9A" FontSize="11" FontWeight="Bold" Margin="0,0,0,12"/>
                    <ComboBox x:Name="CmbVariant" SelectedIndex="1" Margin="0,0,0,20">
                        <ComboBoxItem Content="Kyber-512 (NIST Level 1)"/>
                        <ComboBoxItem Content="Kyber-768 (NIST Level 3)"/>
                        <ComboBoxItem Content="Kyber-1024 (NIST Level 5)"/>
                    </ComboBox>

                    <TextBlock Text="KEY LABEL" Foreground="#7F8C9A" FontSize="11" FontWeight="Bold" Margin="0,0,0,12"/>
                    <TextBox x:Name="TxtKeyLabel" Text="my-pqc-key" Margin="0,0,0,20"/>

                    <Border Background="#0A1628" CornerRadius="8" Padding="16" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Key Specifications" Foreground="#00B4D8" FontSize="12" FontWeight="Bold" Margin="0,0,0,12"/>
                            <Grid Margin="0,4">
                                <TextBlock Text="Public Key Size:" Foreground="#7F8C9A"/>
                                <TextBlock x:Name="TxtPubKeySize" Text="1,184 bytes" Foreground="White" HorizontalAlignment="Right"/>
                            </Grid>
                            <Grid Margin="0,4">
                                <TextBlock Text="Secret Key Size:" Foreground="#7F8C9A"/>
                                <TextBlock x:Name="TxtSecKeySize" Text="2,400 bytes" Foreground="White" HorizontalAlignment="Right"/>
                            </Grid>
                            <Grid Margin="0,4">
                                <TextBlock Text="Ciphertext Size:" Foreground="#7F8C9A"/>
                                <TextBlock x:Name="TxtCipherSize" Text="1,088 bytes" Foreground="White" HorizontalAlignment="Right"/>
                            </Grid>
                            <Grid Margin="0,4">
                                <TextBlock Text="Security Level:" Foreground="#7F8C9A"/>
                                <TextBlock x:Name="TxtSecLevel" Text="NIST Level 3" Foreground="#00D4AA" HorizontalAlignment="Right"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="EXPORT FORMAT" Foreground="#7F8C9A" FontSize="11" FontWeight="Bold" Margin="0,0,0,12"/>
                    <ComboBox x:Name="CmbExportFormat" SelectedIndex="0" Margin="0,0,0,20">
                        <ComboBoxItem Content="PEM (Base64 Encoded)"/>
                        <ComboBoxItem Content="DER (Binary)"/>
                        <ComboBoxItem Content="Raw Bytes"/>
                        <ComboBoxItem Content="JSON"/>
                    </ComboBox>

                    <CheckBox x:Name="ChkEncryptSecretKey" Content="Encrypt secret key with passphrase" 
                              IsChecked="True" Foreground="White" Margin="0,0,0,8"/>
                    <CheckBox x:Name="ChkStoreInKeyring" Content="Store in system keyring" 
                              Foreground="White" Margin="0,0,0,24"/>

                    <Button x:Name="BtnGenerate" Click="GenerateKey_Click" 
                            Background="#00D4AA" Foreground="#0A1628" FontWeight="Bold" 
                            Padding="20,12" Height="Auto" Cursor="Hand" Margin="0,0,0,12"
                            Content="Generate Key Pair"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Key Storage Panel -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#152232" CornerRadius="12" Padding="16" Margin="0,0,0,24">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <TextBox x:Name="TxtSearch" Width="250" Text="Search keys..." 
                                 Margin="0,0,16,0" GotFocus="TxtSearch_GotFocus" LostFocus="TxtSearch_LostFocus"/>
                        <ComboBox x:Name="CmbFilter" SelectedIndex="0" Width="150">
                            <ComboBoxItem Content="All Keys"/>
                            <ComboBoxItem Content="ML-KEM Only"/>
                            <ComboBoxItem Content="ML-DSA Only"/>
                            <ComboBoxItem Content="SLH-DSA Only"/>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Click="ImportKey_Click" Background="Transparent" BorderBrush="#00D4AA" BorderThickness="1"
                                Foreground="#00D4AA" Padding="12,8" Height="Auto" Cursor="Hand" Margin="0,0,8,0"
                                Content="Import"/>
                        <Button Click="ExportSelected_Click" Background="Transparent" BorderBrush="#5A6C7D" BorderThickness="1"
                                Foreground="#7F8C9A" Padding="12,8" Height="Auto" Cursor="Hand"
                                Content="Export"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Row="1" Background="#152232" CornerRadius="12" Padding="24">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Stored Keys" FontSize="18" FontWeight="Bold" 
                               Foreground="White" Margin="0,0,0,20"/>

                    <ListBox x:Name="KeyList" Grid.Row="1" Background="Transparent" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#0A1628" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" Background="#1A2D42" CornerRadius="8" 
                                                Width="50" Height="50" Margin="0,0,16,0">
                                            <TextBlock Text="K" FontSize="24" FontWeight="Bold" 
                                                       Foreground="#00D4AA" 
                                                       HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center"/>
                                        </Border>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Label}" FontSize="14" FontWeight="Bold" Foreground="White"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <Border Background="#00D4AA" CornerRadius="3" Padding="6,2" Margin="0,0,8,0">
                                                    <TextBlock Text="{Binding Algorithm}" FontSize="10" Foreground="#0A1628" FontWeight="Bold"/>
                                                </Border>
                                                <TextBlock Text="{Binding Created}" Foreground="#7F8C9A" FontSize="12"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                            <Button Background="Transparent" BorderThickness="0" Padding="8" Cursor="Hand" 
                                                    Foreground="#7F8C9A" ToolTip="Copy" Content="Copy"/>
                                            <Button Background="Transparent" BorderThickness="0" Padding="8" Cursor="Hand"
                                                    Foreground="#FF4757" ToolTip="Delete" Content="Del"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <StackPanel x:Name="EmptyState" Grid.Row="1" 
                                VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="No keys stored yet" FontSize="16" Foreground="#5A6C7D" 
                                   HorizontalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBlock Text="Generate your first post-quantum key pair to get started" 
                                   FontSize="12" Foreground="#3D4F5F" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
